{
  // Base config file used for VSCode ts language service
  // which provides refactoring and intellisense
  "compilerOptions": {
    "lib": ["ES2019"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2019"
  },
  "compileOnSave": true,
  "include": ["src"]
}
