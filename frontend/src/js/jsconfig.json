{
  "compilerOptions": {
    // Language and Environment

    "target": "ESNext",

    // Modules

    "module": "ES2022",
    "moduleResolution": "node",
    // This is needed to prevent node globals from being added to the project
    "types": ["vite/client"],

    // Completeness

    "skipLibCheck": true,

    // Type Checking

    "noImplicitReturns": true,
    // Added by recomendation from https://github.com/alpinejs/alpine/issues/2199#issuecomment-1711676733
    "noImplicitThis": true,
    // TODO: "strict": true,

    // Emit

    "noEmit": true,

    // JavaScript Support

    "allowJs": true,
    "checkJs": true
  }
}
