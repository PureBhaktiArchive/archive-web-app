{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":automergeMinor",
    ":dependencyDashboard",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":prHourlyLimit2",
    ":prConcurrentLimit10",
    "group:googleapis",
    "group:monorepos",
    "group:test",
    "group:linters",
    "schedule:quarterly"
  ],
  "suppressNotifications": ["prIgnoreNotification"],
  "vulnerabilityAlerts": {
    "schedule": ["at any time"],
    "automerge": true
  },
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["googleapis"],
      "dependencyDashboardApproval": false
    },
    {
      "matchSourceUrlPrefixes": ["https://github.com/parcel-bundler/parcel"],
      "groupName": "parcel monorepo",
      "schedule": ["at any time"],
      "automerge": false
    }
  ]
}
